[Unit]
Description=Proxy HTTP
After=redis-server
Required=redis-server

[Service]
ExecStartPre=-/usr/bin/docker kill proxy
ExecStartPre=-/usr/bin/docker rm proxy
ExecStartPre=-/usr/bin/docker pull quay.io/renorainz/proxy:0.0.3
ExecStart=/usr/bin/docker run --rm --name proxy -p 80:80 quay.io/renorainz/proxy:0.0.3
ExecStop=/usr/bin/docker stop proxy
